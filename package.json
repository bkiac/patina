{
	"name": "ruts",
	"version": "0.7.0",
	"type": "module",
	"description": "",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bkiac/ruts.git"
	},
	"author": "bkiac <bkiac@pm.me>",
	"license": "MIT",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"keywords": [
		"typescript",
		"error-handling",
		"option-type",
		"result-type"
	],
	"scripts": {
		"build": "tsup",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepublishOnly": "pnpm run build",
		"test": "vitest",
		"types": "tsc --noEmit"
	},
	"devDependencies": {
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.2",
		"prettier-plugin-pkg": "^0.18.0",
		"tsup": "^7.2.0",
		"tsx": "^3.14.0",
		"typescript": "^5.0.4",
		"vitest": "^0.34.6"
	},
	"sideEffects": false,
	"lint-staged": {
		"*.{ts,yaml,json,md}": "prettier --write"
	},
	"prettier": {
		"plugins": [
			"prettier-plugin-pkg"
		],
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": false,
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"jsxSingleQuote": false,
		"printWidth": 100,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"semi": false,
		"singleQuote": false,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	}
}
